<section class="container">
  <div class="d-flex">
    <div class="hstack gap-3 mb-3">
      <a href="/displayBoard">
        <button class="btn btn-danger">Back</button>
      </a>
      <a href="/displayBoard">
        <button class="btn btn-success">Add Entry</button>
      </a>
    </div>

    <ul class="nav nav-pills mb-3 ms-auto" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-R2-tab" data-bs-toggle="pill" data-bs-target="#pills-R2" type="button" role="tab" aria-controls="pills-R2" aria-selected="true">R2</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-R3-tab" data-bs-toggle="pill" data-bs-target="#pills-R3" type="button" role="tab" aria-controls="pills-R3" aria-selected="false">R3</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-ESH-tab" data-bs-toggle="pill" data-bs-target="#pills-ESH" type="button" role="tab" aria-controls="pills-ESH" aria-selected="false">ESH</button>
      </li>
    </ul>
  </div>

  <% if (type == "Issue" || type == "issue") { %>
  <main class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-R2" role="tabpanel" aria-labelledby="pills-R2-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/IssueDisplay",{documents, location:"R2"}) %>
    </div>
    <div class="tab-pane fade" id="pills-R3" role="tabpanel" aria-labelledby="pills-R3-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/IssueDisplay",{documents, location:"R3"}) %>
    </div>
    <div class="tab-pane fade" id="pills-ESH" role="tabpanel" aria-labelledby="pills-ESH-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/IssueDisplay",{documents, location:"ESH"}) %>
    </div>
  </main>
  <% } %>

  <% if (type == "Return" || type == "return") { %>
  <main class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-R2" role="tabpanel" aria-labelledby="pills-R2-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/ReturnDisplay",{documents, location:"R2"}) %>
    </div>
    <div class="tab-pane fade" id="pills-R3" role="tabpanel" aria-labelledby="pills-R3-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/ReturnDisplay",{documents, location:"R3"}) %>
    </div>
    <div class="tab-pane fade" id="pills-ESH" role="tabpanel" aria-labelledby="pills-ESH-tab" tabindex="0">
      <%- include(views + "/partials/components/displayBoard/schedule/ReturnDisplay",{documents, location:"ESH"}) %>

    </div>
  </main>
  <% } %>
</section>

<script>
  function convertDate(className) {
    document.querySelectorAll(`.${className}`).forEach((el) => {
      const date = moment(new Date(el.innerText).toISOString()).format("DD/MM/YYYY")
      if (date == "01/01/1970") {
        el.innerText = "Nill"
      } else {
        el.innerText = date
      }
    })
  }
  convertDate("issueDate")
  convertDate("returnDate")
</script>