<% if (success && success.length) { %>
<div class="alert alert-success alert-dismissible fade show w-100 mb-0" style="z-index: 5;" role="alert">
  <strong><%= success %> </strong>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show mb-0 w-100" style="z-index: 5;" role="alert">
  <strong><%= error %> </strong>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>